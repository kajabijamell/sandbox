.social-icons {
  font-size: 0;
  display: block;
  margin-bottom: 30px;
  text-align: left;
  &__row {
    margin: 0 -$social-icon-spacing;
  }
  &__icon {
    font-family: "FontAwesome" !important;
    font-size: $social-icon-font-size;
    line-height: $social-icon-container-size;
    display: inline-block;
    margin: $social-icon-spacing;
    text-decoration: none;
