/*============================================================================
  #Text Section
==============================================================================*/
.section--multi_video {
  text-align: center;
  .container {
    position: relative;
  }
  /*============================================================================
    #Section Color Schemes
  ==============================================================================*/
  a {
    text-decoration: none;
    &:hover {
      opacity: .7;
    }
    &:focus {
      outline: 0;
    }
  }
  &.section--light {
    a {
      color: $font-color-dark;
    }
    .slick-prev, .slick-next {
      &:before {
        color: $font-color-dark;
      }
    }
  }
  &.section--dark {
    a {
      color: $font-color-light;
    }
    .slick-prev, .slick-next {
      &:before {
        color: $font-color-light;
      }
    }
  }
  .slick-track {
    margin: 0 auto;
  }
  .slick-prev, .slick-next {
    font-size: 0;
    line-height: 0;
    position: absolute;
    top: 50%;
    display: inline;
    width: 10px;
    height: 20px;
    padding: 0;
    cursor: pointer;
    color: transparent;
    border: none;
    outline: none;
    background: transparent;
    z-index: 1000;
    &:before {
      font-family: FontAwesome;
      font-style: normal;
      font-weight: normal;
      text-decoration: inherit;
      /*--adjust as necessary--*/
      color: #fff;
      font-size: 18px;
      padding-right: 0.5em;
      position: absolute;
      top: 0;
      left: 0;
      opacity: .7;
    }
  }
  .slick-next {
    right: 0;
    &:before {
      content: "\f054";
    }
  }
  .slick-prev {
    left: 0;
    &:before {
      content: "\f053";
    }
  }
  /*============================================================================
    #Video Overflow Scroller
  ==============================================================================*/
  .multi_video {
    &--video {
      margin: 1rem auto;
      margin-bottom: .5rem;
      position: relative;
      max-width: 200px;
    }
    &-locked {
      .multi_video--video {
        -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
        filter: grayscale(100%);
      }
      .multi_video--icon {
        opacity: .6;
      }
    }
    &-click {
      &:hover {
        .multi_video--img {
          opacity: 1;
        }
      }
    }
    &-active {
      .multi_video--label {
        color: $color-primary;
      }
      .multi_video--video {
        opacity: 1;
      }
      .multi_video--icon {
        display: none;
      }
      .multi_video--img {
        opacity: 1;
      }
    }
    &--heading {
      margin: 0;
      white-space: normal;
    }
    &--label {
      color: $color-dark;
      display: block;
      font-size: 12px;
    }
    &--icon {
      z-index: 100;
      margin: 0;
      opacity: 1;
      position: absolute;
      width: 40px;
      height: 40px;
      top: 50%;
      left: 50%;
      @include translate(-50%,-50%)
    }
    &--img {
      z-index: 99;
      margin: 0;
      opacity: .5;
      @include transition(opacity .3s ease-in-out);
      -webkit-backface-visibility: hidden;
    }
  }
}

/*============================================================================
  #Opt In Section
==============================================================================*/
.section--opt_in {
  .optin {
    &--inline {
      .form-group, .btn {
        margin-top: 1rem;
        margin-bottom: 1rem;
      }
    }
    &--stacked {
      margin-top: 1rem;
      margin-bottom: 1rem;
    }
    &__panel {
