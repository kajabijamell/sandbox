  #Pops
==============================================================================*/
body.pop-open {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: fixed;
}
.pop {
  display: none;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1000;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  text-align: center;
  overflow: auto;
  z-index: 10000;
  background: rgba(0,0,0,.7);
  &--dark {
    color: $font-color-light;
    a {
      color: $font-color-light;
      &:hover {
        color:lighten($font-color-light,$hover-amount);
      }
    }
  }
  &--light {
    color: $font-color-dark;
    a {
      color: $font-color-dark;
      &:hover {
        color:lighten($font-color-dark,$hover-amount);
      }
    }
  }
  &__close {
    position: absolute;
    top: -30px;
    right: -30px;
    display: inline-block;
    font-size: 0;
    width: 25px;
    height: 25px;
    background: url(close.svg);
    background-size: 25px 25px;
    margin:0;
    opacity: 1;
    cursor: pointer;
  }
  &__content {
    display: table;
    height: 100%;
    width: 100%;
    border-radius: 5px;
  }
  &__inner {
    display: table-cell;
    text-align: center;
    vertical-align: middle;
    padding: 30px;
  }
  &__body {
    max-width: 650px;
    border-radius: 4px;
    display: inline-block;
    position: relative;
    img {
      margin: 0 0;
    }
    &--inner {
      padding: 50px 80px;
    }
  }
  &__form {
    margin: 30px 0;
    text-align: left;
  }
}
@media (max-width: $sm-max) {
  .pop {
    &__close {
      right: -5px;
    }
    &__body {
      &--inner {
        padding: 30px;
      }
    }
  }
}

