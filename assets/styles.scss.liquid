      }
    }
  }
  &.section--light {
    .form-control {
      .form-control {
        background: rgba(0,0,0,.1);
        &::placeholder {
          color: $font-color-dark;
          opacity: 1;
        }
        &:-ms-input-placeholder {
          color: $font-color-dark;
        }
        &::-ms-input-placeholder {
