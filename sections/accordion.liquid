{% include "section_style", bgColor: settings.color_offset, vertAlign: "middle" %}

<!-- Section Variables -->
{% assign s-Alignment = section.settings.alignment %}

<!-- KJB Settings Variables -->
{% assign kjb-Text    = 'text' | settings_id: section: section %}

<div class="{{ s-SplashWrapper }}">
  <div id="" class="section section--accordion section--{{ s-VertAlign }} section--{{ s-Spacing }} section--{{ s-AutoTextColor }} section--{{ s-ID }} {{ s-Splash }}" kjb-settings-id="{{ kjb-Background }}">
    <div class="container">
      {% include "section_heading" %}
      <div class="row text-xs-center">
        <div class="col-md-10">
          <div class="accordion" id="accordion-{{ s-ID }}" role="tablist" aria-multiselectable="true">
            {% for block in section.blocks %}
              {% include "accordion_item" %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Accordion",
    "blocks": [
      {
        "type": "accordion_item",
        "name": "Accordion Item",
        "elements": [
          {
            "type": "header",
            "content": "Accordion Item"
          },
          {
            "type": "divider"
          },
          {
            "type": "text",
            "id": "accordion_trigger",
            "label": "Trigger Text",
            "default": "Accordion Trigger"
          },
          {
            "type": "rich_text",
            "label": "Text",
            "id": "accordion_body",
            "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>"
          },
          {
            "type": "header",
            "content": "Block Appearance",
            "style": "subheading"
          },
          {
            "type": "color",
            "label": "Background Color Override",
            "id": "background_color",
            "allow_blank": true
          },
          {
            "type": "color",
            "label": "Text Color Override",
            "id": "text_color",
            "allow_blank": true
          }
        ]
      }
    ],
    "elements": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Frequently Asked Questions"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": ""
      },
      {
        "type": "header",
        "content": "Section Appearance",
        "style": "subheading"
      },
      {
        "type": "color",
        "label": "Background Color Override",
        "id": "background_color",
        "allow_blank": true
      },
      {
        "type": "color",
        "label": "Text Color Override",
        "id": "text_color",
        "allow_blank": true
      },
      {
        "type": "select",
        "id": "spacing",
        "label": "Spacing",
        "default": "medium",
        "options": [
          { "label": "Extra Small", "value": "xs-small" },
          { "label": "Small", "value": "small" },
          { "label": "Medium", "value": "medium" },
          { "label": "Large", "value": "large" },
          { "label": "Full Height", "value": "full" }
        ]
      }
    ],
    "presets": [
      {
        "name": "Accordion",
        "description": "Use this section to have accordion functionality in your page.",
        "category": "Content",
        "blocks": [
          { "type": "accordion_item", "settings": { "accordion_trigger": "What does my membership give me?" } },
          { "type": "accordion_item", "settings": { "accordion_trigger": "How long is my trial period?" } },
          { "type": "accordion_item", "settings": { "accordion_trigger": "How many lessons are in the course?" } }
        ]
      }
    ]
  }
{% endschema %}
