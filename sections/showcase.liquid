      },
      {
        "type": "checkbox",
        "id": "show_image",
        "label": "Show Image",
        "default": "true"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Suggested dimensions: 898 × 898",
        "fit": "max",
        "width": 1000,
