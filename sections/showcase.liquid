{% include "section_style", bgColor: "rgba(20, 50, 92, 0.92)", defaultImg: "showcase.jpg", vertAlign: "middle", bgImage: true %}

<!-- Section Variables -->
{% assign s-Position  = section.settings.position %}
{% assign s-Alignment = section.settings.alignment %}
{% assign s-Img       = section.settings.image | image_picker_url: 'showcase_img.png' %}
{% assign s-ImgShow   = section.settings.show_image %}
{% assign s-Text      = section.settings.text %}

<!-- KJB Settings Variables -->
{% assign kjb-Image = 'image' | settings_id: section: section %}
{% assign kjb-Text  = 'text' | settings_id: section: section %}

<div class="background-image background-image--{{ s-ID }} {{ s-SplashWrapper }}">
  <div class="section section--showcase section--{{ s-VertAlign }} section--{{ s-Spacing }} section--{{ s-AutoTextColor }} section--{{ s-ID }} {{ s-Splash }}" kjb-settings-id="{{ kjb-Background }}">
    <div class="container">
      <div class="row">
        {% if s-ImgShow %}
          {% if s-Position == "Right" %}
            <div class="col-md-6">
              {% include "showcase_text" %}
            </div>
            <div class="col-md-5 offset-sm-1">
              <img src="{{ s-Img }}" class="img-fluid" kjb-settings-id="{{ kjb-Image }}"/>
            </div>
          {% else %}
            <div class="col-md-5">
              <img src="{{ s-Img }}" class="img-fluid" kjb-settings-id="{{ kjb-Image }}"/>
            </div>
            <div class="col-md-6 offset-sm-1">
              {% include "showcase_text" %}
            </div>
          {% endif %}
        {% else %}
          <div class="col-md-12">
            {% include "showcase_text" %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
