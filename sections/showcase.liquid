      {
        "type": "header",
        "content": "Section Appearance",
        "style": "subheading"
      },
      {
        "type": "checkbox",
        "id": "show_img",
        "label": "Use Background Image",
        "default": "true"
      },
      {
        "type": "checkbox",
        "id": "show_overlay",
        "label": "Use Image Overlay",
        "default": "true"
      },
