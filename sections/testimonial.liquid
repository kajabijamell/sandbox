{% include "section_style", bgColor: "rgba(0,0,0,.7)", defaultImg: "testimonial.jpg", vertAlign: "middle", bgImage: true %}

<div class="background-image background-image--{{ s-ID }}">
  <div class="section section--testimonial section--{{ s-VertAlign }} section--{{ s-Spacing }} section--{{ s-AutoTextColor }} section--{{ s-ID }} {{ s-Splash }}" kjb-settings-id="{{ kjb-Background }}">
    <div class="container">
      <div class="testimonials">
        {% for block in section.blocks %}
          {% include "testimonial" %}
        {% endfor %}
      </div>
    </div>
    <div id="paginator">
      <div class="paginator-dots"></div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Testimonials",
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "elements": [
          {
            "type": "header",
            "content": "Testimonial"
          },
          {
            "type": "text",
            "label": "Name",
            "id": "name",
            "default": "Testimonial"
          },
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default": "Job Title"
          },
          {
            "type": "textarea",
            "label": "Text",
            "id": "text",
            "default": "Proin nibh arcu, consectetur a odio nec, aliquet suscipit enim. Suspendisse aliquam, libero ac tincidunt suscipit, lacus quam commodo odio, nec faucibus arcu ante in odio. Proin ornare luctus massa, id hendrerit tellus auctor eu. Nullam eget egestas orci."
          },
          {
            "type": "checkbox",
            "id": "show_image",
            "label": "Show Headshot",
            "default": "true"
          },
          {
            "type": "image_picker",
            "fit": "crop",
            "width": 240,
            "height": 240,
            "id": "image",
            "label": "Image",
            "info": "Suggested dimensions: 500 ×  500"
          }
        ]
      }
    ],
    "elements": [
      {
        "type": "checkbox",
        "id": "show_img",
        "label": "Use Background Image",
        "default": "true"
      },
      {
        "type": "checkbox",
        "id": "show_overlay",
        "label": "Use Image Overlay",
        "default": "true"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image",
        "info": "Suggested dimensions: 2880 × 1200. Learn more about how to properly use background images [here](premier_hero_bg_image).",
        "fit": "max",
        "width": 3000,
        "height": 3000
      },
      {
        "type": "color",
        "label": "Background Color",
        "id": "background_color",
        "allow_blank": true,
        "info": "Will be used as overlay if settings for background image selected. Use Opacity slider. Learn more about working with image overlays [here](image_overlay)"
      },
      {
        "type": "color",
        "label": "Text Color",
        "id": "text_color",
        "allow_blank": true,
        "info": "Text color will change automatically based on the brightness of your background color. Use this setting if you would like to override with a custom color."
      },
      {
        "type": "select",
        "id": "spacing",
        "label": "Spacing",
        "default": "medium",
        "options": [
          { "label": "Extra Small", "value": "xs-small" },
          { "label": "Small", "value": "small" },
          { "label": "Medium", "value": "medium" },
          { "label": "Large", "value": "large" }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials",
        "description": "Add praise from your users and reviews of your product or service.",
        "category": "Content",
        "blocks": [
            { "type": "testimonial", "settings": { } }
        ]
      }
    ]
  }
{% endschema %}
